<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

  <!-- page Accueil -->
  <servlet>
    <servlet-name>Accueil</servlet-name>
    <servlet-class>com.demo.Accueil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/Accueil</url-pattern>
  </servlet-mapping>

  <!-- page Incident -->
  <servlet>
    <servlet-name>Incident</servlet-name>
    <servlet-class>com.demo.Incident</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Incident</servlet-name>
    <url-pattern>/Incident</url-pattern>
  </servlet-mapping>

  <!-- page Inscription -->
  <servlet>
    <servlet-name>Inscription</servlet-name>
    <servlet-class>com.demo.Inscription</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inscription</servlet-name>
    <url-pattern>/Inscription</url-pattern>
  </servlet-mapping>
  <!-- page 404 -->
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
</web-app>


